{% extends 'base.html.twig' %}

{% block title %}Admin - TalaTrivia{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>    
    .admin-wrapper {
        display: flex;
        width: 100%;
        padding-top: 80px; 
        min-height: calc(100vh - 80px);
        box-sizing: border-box;
    }

    .sidebar {
        width: 250px;
        background-color: #4f46e5;
        color: #fff;
        display: flex;
        flex-direction: column;
        padding: 2.5rem 1rem;
        box-shadow: 3px 0 10px rgba(0, 0, 0, 0.06);
        position: fixed;
        left: 0;
        top: 5%; 
        bottom: 0;
        overflow-y: auto;
    }

    .sidebar .logo { font-size: 1.2rem; font-weight:700; text-align:left; margin-bottom:1.5rem }
    .sidebar ul { list-style:none; padding:0; margin:0 }
    .sidebar ul li { margin-bottom:12px }
    .sidebar a { color:#e0e7ff; text-decoration:none; display:block; padding:0.6rem 1rem; border-radius:.5rem }
    .sidebar a:hover, .sidebar a.active { background-color:#6366f1; color:#fff }

    .admin-main { margin-left: 250px; padding: 2.5rem 2rem; min-height: calc(100vh - 80px); }
    .container-centered { max-width: 980px; margin: 0 auto; }

    @media (max-width: 768px) {
      .admin-wrapper { padding-top: 64px }
      .sidebar { position: relative; top: 0; width:100%; padding:1rem; display:flex; flex-direction:row; justify-content:space-around }
      .admin-main { margin-left: 0 }
      .container-centered { padding: 0 1rem }
    }
  </style>
{% endblock %}

{% block body %}
  <div class="admin-wrapper">
    <nav class="sidebar">
      <div class="logo">üéõÔ∏è TalaTrivia</div>
      <ul>
        <li><a href="{{ path('admin_index') }}">Dashboard</a></li>
        <li><a href="{{ path('categories_list') }}">Categor√≠as</a></li>
        <li><a href="{{ path('questions_list')}}">Preguntas</a></li>
        <li><a href="{{ path('trivia_list')}}">Trivias</a></li>
        <li><a href="{{ path('answer_list')}}">Respuestas</a></li>
        <li><a href="{{ path('app_logout') }}">Cerrar sesi√≥n</a></li>
      </ul>
    </nav>

    <main class="admin-main" style="width:100%">
      <div class="container-centered">
        {% block content %}{% endblock %}
      </div>
    </main>
  </div>
{% endblock %}
