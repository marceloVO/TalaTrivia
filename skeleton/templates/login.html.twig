{% extends 'base.html.twig' %}

{% block title %}Login - TalaTrivia{% endblock %}
{% block stylesheet %}
<style>

</style>
{% endblock %}
{% block body %}
<div class="max-w-md container mx-auto bg-white p-6 rounded-lg shadow" style="width: 30%; height: 250px;">
  <h1 class="text-2xl font-semibold mb-4">Iniciar sesión</h1>
  <form method="post" action="{{ path('app_login') }}" class="space-y-4">
    <div>
      <input name="email" type="email" placeholder="Email" required class="form-control mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
    </div>
    <div>
      <input name="password" type="password" placeholder="Contraseña" required class="form-control mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
    </div>
    <div class="flex items-center justify-between" style="padding-top: 2rem;">
      <button type="submit" class="text-white px-4 py-2 rounded btn btn-success">Entrar</button>
      <a href="/register" class="text-sm text-gray-600 hover:text-gray-800">Registrarse</a>
    </div>
  </form>
</div>

{% endblock %}
